	void transmit0(){
		byte err;
		word time;
		FC321_Reset();
		//
		FC321_GetTimeMS(&time);
		Green_ClrVal();
		Red_ClrVal();
		Blue_ClrVal();

		while(time < 40){
			FC321_GetTimeMS(&time);
		}
		//

		Blue_SetVal();
		Green_SetVal();
		Red_SetVal();
		FC321_Reset();
		FC321_GetTimeMS(&time);
